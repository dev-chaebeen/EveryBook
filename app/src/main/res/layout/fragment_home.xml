<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    >

    <!--검색창-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="5"
            >

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="left"
                app:iconifiedByDefault="false"
                app:queryHint="Search Book"
                android:layout_weight="4"/>

            <ImageView
                android:id="@+id/mic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_mic"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="15dp"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="left|center"
            android:scaleType="fitCenter"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/memo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:textSize="13sp"
                android:text="작성한 메모가 일정 간격으로 나타나는 공간입니다"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/spinner_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Book List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/spinner_order"
            app:layout_constraintStart_toStartOf="parent">

        </TextView>

        <Spinner
            android:id="@+id/spinner_order"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:entries="@array/order"
            android:gravity="right"
            android:layout_marginLeft="150dp"

            />

    </LinearLayout>

    <!--읽을 책/ 읽고있는 책/ 읽은 책-->
   <LinearLayout
       android:id="@+id/read_tab_list"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       app:layout_constraintTop_toBottomOf="@+id/spinner_container"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"

       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:weightSum="9"
           android:orientation="horizontal"
           tools:ignore="MissingConstraints">

           <Button
               android:id="@+id/btn_to_read"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_weight="3"
               android:text="To READ"
               />

           <Button
               android:id="@+id/btn_reading"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_weight="3"
               android:text="READING" />


           <Button
               android:id="@+id/btn_read"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_weight="3"
               android:text="READ" />

       </LinearLayout>
    </LinearLayout>


    <!--프레임 레이아웃 -->
    <FrameLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
</LinearLayout>






